# Determines whether the host machine is running Ubuntu
is_ubuntu(){
  lsb_release -a |& grep -q "Ubuntu"
}

# Destroys dangling Docker images and exited containers
# Credit to: jessfraz
docker-clean(){
  docker rm -v $(docker ps --filter status=exited -q 2> /dev/null) 2> /dev/null
  docker rmi $(docker images --filter dangling=true -q 2>/dev/null) 2> /dev/null
}

# Installs a dotfile by creating a symbolic link (if the file hasn't already
# been installed)
dotfilelink(){
  to=$1
  from=$2
  if (test -f "${from}"); then
    echo "[dotfilelink] skipping: ${from} -> ${to} (already exists)"
  else 
    echo "[dotfilelink] linking: ${from} -> ${to}"
    ln -s "${to}" "${from}"
  fi
}

gtfo(){
  rm -rf /tmp/*
}
